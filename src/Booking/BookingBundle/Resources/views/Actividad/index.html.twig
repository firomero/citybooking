{% extends 'BookingBundle::layout.html.twig' %}

{% block content -%}

    <div class="inner" data-ng-app="actividadManager">
        <div class="row" data-ng-controller="managerController">
            <div class="col-lg-12">
                <div class="panel panel-default">

                    <div class="panel-heading">
                        {{ 'booking.actividad.header.list'|trans({},'BookingBundle') }}
                        <button class="btn btn-mini pull-right add"
                                title="{{ 'booking.actividad.actions.add'|trans({},'BookingBundle') }}"
                                data-ng-click="modalAdd()"
                                ><i class="icon-plus"></i>
                        </button>

                    </div>

                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="tabla" class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th></th>
                                    <th>{{ 'booking.actividad.table.type'| trans({}, 'BookingBundle') }}</th>
                                    <th>{{ 'booking.actividad.table.date'| trans({}, 'BookingBundle') }}</th>
                                    <th>{{ 'booking.actividad.table.guide'| trans({}, 'BookingBundle') }}</th>
                                    <th>{{ 'booking.actividad.table.precioguia'| trans({}, 'BookingBundle') }}</th>
                                    <th>{{ 'booking.actividad.table.total'| trans({}, 'BookingBundle') }}</th>
                                    <th>{{ 'booking.actividad.table.actions'| trans({}, 'BookingBundle') }}</th>
                                </tr>
                                </thead>
                                <tbody>

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
{% block JavaScriptInline %}
    <script src="{{ asset('public/js/bootstrap-datepicker.js') }}"></script>
    <script src="{{ asset('public/js/bootstrap-timepicker.js') }}"></script>
    {#<script src="{{ asset('public/js/booking.js') }}"></script>#}
    {#<script src="{{ asset('public/js/xuiModal.js') }}"></script>#}
    <script src="{{ asset('bundles/booking/js/actividadDatatables.js') }}"></script>
    <script src="{{ asset('bundles/booking/js/actividadManager.js') }}"></script>
{% endblock JavaScriptInline %}
 {% block  stylesheet %}
     {{ parent() }}
     <link href="{{ asset('bundles/booking/css/actividad.css') }}" rel="stylesheet"/>
     <link href="{{ asset('public/css/loader.css') }}" rel="stylesheet"/>
     <link href="{{ asset('public/css/bootstrap-timepicker.css') }}" rel="stylesheet"/>
 {% endblock stylesheet %}
