<div class="col-lg-4 col-md-4">
    <div class="col-md-12">{{ form_errors(form) }}</div>
    <form class="ajaxForm" method="post" action="{{ path('reservacion_crear') }}"  {{ form_enctype(form) }}>

        <div class="form-group">
            {{ form_label(form.casa, 'booking.habitacion.labels.house'| trans({}, 'BookingBundle') ) }}

                {{ form_widget(form.casa,{'attr':{ 'class': 'form-control' }}) }}

        </div>
        <div class="form-group">
            {{ form_label(form.tipo, 'booking.habitacion.labels.type' | trans({}, 'BookingBundle') ) }}

                {{ form_widget(form.tipo,{'attr':{ 'class': 'form-control' }}) }}
        </div>

        <div  class="form-group">
            <button type="submit"
                    class="btn btn-primary action edit">{{ 'booking.casa.actions.acept' | trans({}, 'BookingBundle') }}</button>
            <button type="button" class="btn btn-default"
                    data-dismiss="modal">{{ 'booking.casa.actions.cancel' | trans({}, 'BookingBundle') }}</button>
        </div>
        {{ form_rest(form) }}

    </form>
</div>