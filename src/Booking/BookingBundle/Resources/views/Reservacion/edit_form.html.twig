<form class="ajaxForm" method="post"
      action="{{ path('habitacion_actualizar',{ id: entity.id }) }}"  {{ form_enctype(edit_form) }}>

    <div class="form-group">
        {{ form_label(edit_form.casa, 'booking.habitacion.labels.house'| trans({}, 'BookingBundle') ) }}

        {{ form_widget(edit_form.casa,{'attr':{ 'class': 'form-control' }}) }}

    </div>
    <div class="form-group">
        {{ form_label(edit_form.tipo, 'booking.habitacion.labels.type' | trans({}, 'BookingBundle') ) }}

        {{ form_widget(edit_form.tipo,{'attr':{ 'class': 'form-control' }}) }}
    </div>

    <div class="form-group">
        <button type="submit"
                class="btn btn-default action edit">{{ 'booking.casa.actions.acept' | trans({}, 'BookingBundle') }}</button>
        <button type="button" class="btn btn-default"
                data-dismiss="modal">{{ 'booking.casa.actions.cancel' | trans({}, 'BookingBundle') }}</button>
    </div>


    {{ form_rest(edit_form) }}

</form>
