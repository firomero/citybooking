<div class="col-md-12">{{ form_errors(form) }}</div>
<form class="ajaxForm" method="POST" action="{{ path('cliente_update',{ id:entity.id }) }}"  {{ form_enctype(form) }}>
    <div class="control-group">
        {{ form_label(form.nombre, 'booking.cliente.labels.name'| trans({}, 'BookingBundle') ) }}

        {{ form_widget(form.nombre,{'attr':{'class':'form-control dating'}}) }}

    </div>
    <div class="control-group">
        {{ form_label(form.referencia, 'booking.cliente.labels.reference' | trans({}, 'BookingBundle')  ) }}

        {{ form_widget(form.referencia,{'attr':{'class':'form-control'}}) }}

    </div>
    <div class="control-group">
        <br>
        <button type="submit"
                class="btn btn-primary action">{{ 'booking.actividad.buttons.accept' | trans({}, 'BookingBundle') }}</button>
        <button type="button" class="btn btn-success"
                data-dismiss="modal">{{ 'booking.actividad.buttons.cancel' | trans({}, 'BookingBundle') }}</button>
    </div>
    {{ form_rest(form) }}

</form>
