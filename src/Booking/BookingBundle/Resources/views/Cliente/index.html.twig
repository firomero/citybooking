{% extends 'BookingBundle::layout.html.twig' %}

{% block content %}
    <div class="inner">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">

                    <div class="panel-heading">
                        {{ 'booking.cliente.header.list'|trans({},'BookingBundle') }}
                        <button class="btn btn-mini pull-right add"
                                title="{{ 'booking.cliente.actions.add'|trans({},'BookingBundle') }}"
                                data-toggle="modal" data-target="#myModalDialog">
                            <i class="icon-plus"></i>
                        </button>

                    </div>

                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="tabla" class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th></th>
                                    <th>Nombre</th>
                                    <th>Referencia</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!--Modals-->
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" class="modal fade"
         id="myModalDialog">
        <div class="modal-dialog">
            <div class="modal-content">
                {{ form_start(formCliente) }}
                <div class="modal-header">
                    <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                    <h5 id="myModalLabelConfirmar" class="modal-title">{{ 'booking.cliente.actions.add' |trans({},'BookingBundle') }}</h5>
                </div>
                <div class="modal-body">
                    <div class="se-pre-con hide"></div>
                    <div class="control-group mensajes">
                        <label for="booking_bookingbundle_cliente_nombre">{{ 'booking.cliente.labels.name' |trans({},'BookingBundle') }} </label>
                        {{ form_widget(formCliente.nombre,{'attr': {'class':'form-control' }}) }}
                    </div>
                    <br/>

                    <div class="se-pre-con hide"></div>
                    <div class="control-group mensajes">
                        <label for="booking_bookingbundle_cliente_referencia">{{ 'booking.cliente.labels.reference' |trans({},'BookingBundle') }} </label>
                        {{ form_widget(formCliente.referencia,{'attr': {'class':'form-control' }}) }}
                    </div>
                    <br/>

                    <div class="control-group">
                        <button type="submit" class="btn btn-primary action">{{ 'booking.cliente.buttons.acept' |trans({},'BookingBundle') }}</button>
                        <button type="button" class="btn btn-success" data-dismiss="modal">{{ 'booking.cliente.buttons.cancel' |trans({},'BookingBundle') }}</button>
                    </div>
                </div>
                {#{% do formCliente.actividades.setRendered %}#}
                {#{% do formCliente.submit.setRendered %}#}
                {{ form_end(formCliente) }}
            </div>
        </div>
    </div>


    {# Confirm#}
    <!--Dialogs-->
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" class="modal fade confirm"
         id="confirm">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                    <h3 id="myModalLabelConfirmar">Información</h3>
                </div>
                <div class="modal-body">
                    <div class="se-pre-con hide"></div>
                    <div class="control-group mensajes">
                        ¿Seguro que desea eliminar el elemento seleccionado.?
                    </div>
                    <div class="control-group">
                        <button type="button" class="btn btn-default delete">Aceptar</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>

        </div>
    </div>



{% endblock content %}

{% block JavaScriptInline %}
    <script type="text/javascript">
        $(function () {
            $(document).ready(function () {

                var oTable;
                oTable = $('#tabla').dataTable(
                        {
                            "oLanguage": $language,
                            "aLengthMenu": [5, 10, 15],
                            "sPaginationType": "full_numbers",
                            "pageLength": 10,
                            "bLengthChange": true,
                            "processing": true,
                            "bJQueryUI": true,
                            "bServerSide": true,
                            "sAjaxSource": Routing.generate('ajax_cliente_listar'),
                            "aoColumns": [
                                {"bSortable": false},
                                {'sClass': 'cliente-name'},
                                {'sClass': 'cliente-reference'}
                            ],
                            "drawCallback": $clienteTable.postDraw
                        }
                );

            });

        });

    </script>
    <script src="{{ asset('bundles/booking/js/clienteDatatables.js') }}"></script>
{% endblock JavaScriptInline %}

 {% block  stylesheet %}
     {{ parent() }}
     <link href="{{ asset('bundles/booking/css/cliente.css') }}" rel="stylesheet"/>
     <link href="{{ asset('public/css/loader.css') }}" rel="stylesheet"/>
 {% endblock stylesheet %}
