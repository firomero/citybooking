{% extends 'NomencladorBundle::layout.html.twig' %}

{% block content %}
    <div class="inner">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">

                    <div class="panel-heading">
                        {{ 'nomenclador.agencia.header.list'|trans({},'NomencladorBundle')}}
                        <a class="btn btn-mini pull-right add" title="{{ 'nomenclador.agencia.actions.add'|trans({},'NomencladorBundle') }}" href="{{ path('agencia_new') }}">                                    <i class="icon-plus"></i>
                                </a>

                    </div>

                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="tabla" class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in entities %}
                                    <tr class="gradeA" >
                                        <td><a href="{{ path('agencia_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                        <td>{{ entity.nombre }}</td>
                                        <td>
                                            {#<ul>#}
                                                {#<li>#}
                                                    {#<a href="{{ path('agencia_show', { 'id': entity.id }) }}">show</a>#}
                                                {#</li>#}
                                                {#<li>#}
                                                    {#<a href="{{ path('agencia_edit', { 'id': entity.id }) }}">edit</a>#}
                                                {#</li>#}
                                            {#</ul>#}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    {% endblock content %}

{% block JavaScriptInline %}
<script>
    $(function(){
        $(document).ready(function() {

            $('#tabla').DataTable(
                    {
                        "oLanguage":$language,
//                        "bJQueryUI": true,
                        "aLengthMenu": [5, 10, 15]
                    }
            );
        } );
    })
</script>
 {% endblock JavaScriptInline%}

 {% block  stylesheet %}
     {{ parent() }}
     <link href="{{asset('bundles/nomenclador/css/agencia.css')}}" rel="stylesheet" />
 {% endblock stylesheet %}
